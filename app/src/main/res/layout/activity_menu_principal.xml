<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout_menu_principal"
    tools:context=".MenuPrincipalActivity"
    android:background="#CCFFFA"
    tools:openDrawer="start">

    <TextView
        android:id="@+id/text_view_PROYECTOS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cargando proyectos..."
        android:textSize="30sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textStyle="bold"
        android:paddingTop="90dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_menu_principal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="150dp"
        />

    <include
        layout="@layout/app_bar_menu_principal"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view_menu_principal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header_menu_principal"
        app:menu="@menu/activity_menu_principal_drawer"
        android:background="#9AFAE2">

        <LinearLayout
            android:id="@+id/nav_header_menu_principal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="#73B6AF"
            android:gravity="bottom"
            android:padding="16dp">


            <ImageView
                android:id="@+id/nav_header_logo"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/logo"/>

            <TextView
                android:id="@+id/nav_header_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Luis Benavides"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:paddingTop="6dp"/>

            <TextView
                android:id="@+id/nav_header_correo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="luis@gmail.com"
                android:textColor="#6d6e6d"
                android:textSize="13sp" />

        </LinearLayout>

    </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>